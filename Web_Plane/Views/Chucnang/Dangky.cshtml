@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="~/Content/Picture/logomaybay.jpg" rel="icon" type="image/x-icon" />
    <title>Đăng ký</title>
    <link href="~/Content/css/DangKy.css" rel="stylesheet" />
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
</head>
<body>
    <div class="wrapper">
        <form action="">
            <h1>Đăng ký</h1>
            <div class="input-box">
                <input type="number" placeholder="Nhập cccd" required />
                <i class='bx bxs-id-card'></i>
            </div>
            <div class="input-box">
                <input type="text" placeholder="Nhập họ và tên" required />
                <i class='bx bxs-user'></i>
            </div>
            <div class="input-box">
                <input type="email" placeholder="Nhập Email của bạn" required />
                <i class='bx bxs-envelope'></i>
            </div>
            <div class="input-box">
                <input type="password" placeholder="Nhập mật khẩu" required />
                <i class='bx bxs-lock-alt'></i>
            </div>
            <div class="input-box">
                <input type="month" placeholder="Nhập ngày sinh" required />
            </div>
            <div class="input-box">
                <input type="text" placeholder="Nhập địa chỉ" required />
                <i class='bx bx-map'></i>
            </div>

            <div class="Dong_y_dieu_khoan">
                <label><input type="checkbox" required />I agree all statements in <a href="#">Temrs of service</a></label>
            </div>
            <button type="submit" class="btn_Dang_ky">Đăng ký</button>
        </form>
    </div>
</body>
</html>
